from PIL import Image, ImageDraw, ImageFont
import textwrap

text = """Docker Stack Overview

Overwatch (RPi4):
- Pi-hole, Unbound, PiVPN, CrowdSec, Fail2Ban
- Uptime Kuma, NetAlertX, Glances, Homarr, WatchTower, Portainer

Atlas Core (Ubuntu VM):
- Wazuh, NGINX Proxy Manager, Grafana, Prometheus
- Immich, Home Assistant, Portainer Agent, WatchTower

Helios Media Server:
- Plex, qBittorrent, Radarr, Sonarr, Lidarr, Bazarr, Readarr
- mylar3, Overseerr, Tube Archivist, Tautulli
"""

# Wrap text
wrapped = textwrap.fill(text, width=60)

# Create image
img = Image.new("RGB", (1200, 1600), "white")
draw = ImageDraw.Draw(img)

try:
    font = ImageFont.truetype("arial.ttf", 28)
except:
    font = ImageFont.load_default()

draw.text((40, 40), wrapped, fill="black", font=font)

path = "/mnt/data/docker_stack_overview.png"
img.save(path)

path
